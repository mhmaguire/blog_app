.post_links.row
	%ul.post_links
		%li=link_to "<-- Newer Post", post_path(post.next) unless post.next.nil?
		%li=link_to "^ Back to blog", root_path
		
		%li=link_to "Older Post -->", post_path(post.prev) unless post.prev.nil?
		
.post.row
	%h3=post.title
	%h5=post.created_at
	%p=post.body
	-if user_signed_in?
		=link_to "Edit", edit_post_path(post)
		=link_to "Destroy", post_path(post), method: :delete, confirm: "Are you sure!?"

